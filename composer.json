{
    "name": "igniterlabs/ti-ext-reports",
    "type": "tastyigniter-package",
    "description": "Generate sales summaries and key performance reports for your restaurant.",
    "license": "MIT",
    "authors": [
        {
            "name": "Igniter Labs Team"
        }
    ],
    "require": {
        "tastyigniter/core": "^v4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "IgniterLabs\\Reports\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IgniterLabs\\Reports\\Tests\\": "tests/"
        }
    },
    "extra": {
        "tastyigniter-extension": {
            "code": "igniterlabs.reports",
            "name": "Reports",
            "icon": {
                "class": "fa fa-chart-area",
                "color": "#FFFFFF",
                "backgroundColor": "#147EFB"
            },
            "homepage": "https://tastyigniter.com/marketplace/item/igniterlabs-reports"
        }
    },
    "scripts": {
        "test:lint": "vendor/bin/pint --test --ansi",
        "test:lint-fix": "vendor/bin/pint --ansi",
        "test:refactor": "vendor/bin/rector process --dry-run --ansi",
        "test:refactor-fix": "vendor/bin/rector process --ansi",
        "test:static": "vendor/bin/phpstan analyse --memory-limit=1056M --ansi",
        "test:static-fix": "vendor/bin/phpstan --generate-baseline --memory-limit=1056M --ansi",
        "test:pest": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage --exactly=100 --compact",
        "test:type-coverage": "vendor/bin/pest --type-coverage --min=100",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:static",
            "@test:coverage"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
